<div class="row">
    <div class="col-md-4">
        <form action="/send-message" method="POST" class="card card-body">
            <div class="form-group">
                <input type="text" name="message" class="form-control" placeholder="Desahogate" autofocus autocomplete="off" id="text-field" maxlength="150">
            </div>
            <button class="btn btn-primary btn-block" id="send"> Confesar </button>
        </form>
    </div>
    <div class="col-md-8">
        {{#if messages}}
            <li class="list-group-item list-group-item-action">Confesiones totales: {{messages.length}}</li>

        <ul class="list-group" style="height: 70vh; overflow-y: auto;" id="messages">
            {{#each messages}}
            <li class="list-group-item list-group-item-info list-group-item-action">
                <p>{{text}}</p>
                <span id="timeSpan">{{ timeago createdAt}}</span>
            </li>
            {{/each}}
        </ul>
        {{else}}
        <ul class="list-group" style="height: 70vh; overflow-y: auto;" id="messages">
            <li class="list-group-item list-group-item-action text-center">No hay confesiones esta semana</li>
        </ul>
        {{/if}}
    </div>
</div>